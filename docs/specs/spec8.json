{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Chnaged Economist chart.",
    "width": 700,
    "height": 500,
    "background": "#e6f3ff",
    "data": {
        "values": [
        {"name": "Jeremy Corbyn", "likes": 5.21},
        {"name": "Labour Party", "likes": 0.75},
        {"name": "Momentum", "likes": 0.2},
        {"name": "Owen Smith", "likes": 0.1},
        {"name": "Andy Burnham", "likes": 0.1},
        {"name": "Saving Labour", "likes": 0.05}
        ]
    },
    "mark": {
        "type": "bar",
        "color": "#1f77b4"
    },
    "encoding": {
        "y": {
        "field": "name",
        "type": "nominal",
        "title": null,
        "sort": "-x",
        "axis": {
            "labelFont": "Arial",
            "labelFontStyle": {"expr": "{'Labour Party': 'italic', 'Momentum':'italic', 'Saving Labour':'italic'}[datum.name]"}
            
        }
        },
        "x": {
        "field": "likes",
        "type": "quantitative",
        "title": "Average number of likes per Facebook post\n2016, '000",
        "axis": {
            "grid": true,
            "gridColor": "#ffffff",
            "values": [0, 1, 2, 3, 4, 5, 6]
        }
        }
    },
    "config": {
        "view": {"stroke": null},
        "axis": {
        "labelFont": "Arial",
        "titleFont": "Arial"
        },
        "title": {
        "font": "Arial",
        "fontSize": 14
        }
    },
    "title": {
        "text": "Left-click",
        "subtitle": "Average number of likes per Facebook post\n2016, '000",
        "align": "left",
        "anchor": "start",
        "offset": 20
    }
}

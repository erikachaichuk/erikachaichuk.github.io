{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
        "text": "UK Business Investment (% of GDP)",
        "anchor": "start",
        "subtitle": "Source: ONS through ECO API",
        "subtitleFontStyle": "italic",
        "fontSize": 14,
        "subtitleFontSize": 12,
        "color": "#FFFFFF",  
        "subtitleColor": "#FFFFFF"  
    },
    "height": 500,
    "width": 880,
    "autosize": {"type": "fit", "contains": "padding", "resize": false},
    "background": "#1C1F24", 
    "view": {"fill": "#1C1F24", "strokeOpacity": 0}, 
    "data": {
        "url": "https://api.economicsobservatory.com/gbr/binv?vega",
        "format": {"type": "json"}
    },
    "mark": {
        "type": "line", 
        "color": "#f4134d", 
        "strokeWidth": 2,
        "tooltip": true
    }, 
    "encoding": {
        "x": {
            "field": "date",
            "type": "temporal",
            "axis": {
                "title": "",
                "labelColor": "#FFFFFF", 
                "grid": false
            }
        },
        "y": {
            "field": "value",
            "type": "quantitative",
            "axis": {
                "title": "",
                "labelColor": "#FFFFFF", 
                "grid": false 
            }
        }
    },
    "config": {
        "view": {
        "cornerRadius": 10,
        "stroke": "transperent"
        }
     }
}

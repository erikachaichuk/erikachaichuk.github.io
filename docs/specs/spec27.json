{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Bar chart showing average prices by country.",
    "title": {
      "text": "Average Property Price by Country",
      "subtitle": "Source: World Bank",
      "subtitleFontStyle": "italic",
      "subtitleFontSize": 10,
      "anchor": "start",
      "color": "white",
      "subtitleColor": "white"
    },
    "data": {
      "url": "https://raw.githubusercontent.com/erikachaichuk/erikachaichuk.github.io/refs/heads/main/averages_by_country.csv"
    },
    "mark": "bar",
    "width": 800,
    "height": 500,
    "encoding": {
      "x": {
        "field": "country",
        "title": "Country",
        "type": "nominal",
        "axis": {
          "labelAngle": -45,
          "labelColor": "white",
          "titleColor": "white",
          "grid": false
        }
      },
      "y": {
        "field": "price$",
        "type": "quantitative",
        "title": "Price ($)",
        "axis": {
          "labelColor": "white",
          "titleColor": "white",
          "grid": false
        }
      },
      "color": {
        "field": "deal_satisfaction",
        "type": "ordinal",
        "legend": null
      }
    },
    "config": {
      "background": "#1C1F24"
    }
  }
  
